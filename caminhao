//public 
class Deserto
{
    public static void main(String[] args)
    {
        (new Deserto()).run (args);
    }
    private void run(String[] args)
    {
        inicializaJogo();
        String acao = teclado.next();
            while(!jogoAcabou(acao))
            {
                tratoAcao(acao);
                acao = teclado.next();
            }
            imprimeResultado();
    }
    private static java.util.Console Teclado = new java.util.Console(System.in);
    
       private int[] mapa;
       private int posicao;
       private int caminhao;
    
    private void inicializaJogo()
    {
        mapa = new int[10];
        for (int i=0; i<10; ++i)
            mapa[i]=0;
        posicao = 0;
        caminhao = 7;
       
    }
    private void imprimeResultado()
    {
        if (posicao == mapa.lenght){
            System.out.println("You Win!");
        }
        else{
            System.out.println("You Lose!");
        }
       }    
        private boolean jogoAcabou(String acao){
            if (acao.equalsIgnoreCase("desista")) return true;
            
            if (posicao == mapa.lenght) return true;
            
            if (caminhao==0 && mapa[posicao]<=0) return true;
            
            return false;
        }
        private void trataAcao(String acao)
        {
            if(acao.equalsIgnoreCase("avanÃ§ar"))
                avancar();
            if(acao.equalsIgnoreCase("retornar"))
                retornar();
            if(acao.equalsIgnoreCase("carregar"))
                carregar();
            if(acao.equalsIgnoreCase("descarregar"))
                descarregar();
        }
        private void descarregar()
        {
            if(caminhao<=0)
                return;
                caminhao--;
                mapa[posicao]++;
        }
        private void avancar()
        {
            if(caminhao<=0)
                return;
                posicao++;
                caminhao--;
        }
        private void retornar()
        {
                if(caminhao <= 0)
                    return;
                if(posicao == 0)
                    return;
                    posicao--;
                    caminhao--;
                if(posicao == 0)
                    caminhao=7;
        }
        private void carregar()
        {
            if(caminhao >= 7)
                return;
            if (mapa[posicao]<=0)
                return;
            int carga=7-caminhao;
            if(mapa[posicao]>carga){
                caminhao=7;
                mapa[posicao]=carga;
            }
            else{
                caminhao += carga;
                mapa[posicao]-=0;
            }           
      
        }
        /**private void trataAcao(String acao)
            switch (acao.toLowerCase())
            {
                "carregar": carregar();
                            break;
                "avancar": avancar();
                            break;
                "retornar": retornar();
                            break;
                "descarregar": descarregar();
                            break;
            }**/
    }

